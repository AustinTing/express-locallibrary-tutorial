doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='clearfix' style='display: block;')
      nav.navbar.navbar-default.container-fluid.navbar-header
        a.navbar-brand(href='/') 
          if user
            span 歡迎 !{user.first_name} 來到 歐杯 的圖書世界
          else
            span 歐杯的圖書世界

      ul.nav.navbar-nav(style='display: block; float: right;')
        if user
          li
            a(href='/users/profile') 個人頁面
          li
            a(href='/users/logout') 登出
        else
          li
            a(href='/users/signup') 註冊
          li
            a(href='/users/login') 登入


    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
