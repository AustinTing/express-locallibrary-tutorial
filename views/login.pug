extends layout

block content
  h1= title
  form(method='POST' action='')

    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='enter your username' name='username' value=(undefined===user ? '' : user.username) required='true' autofocus)
      label(for='password') Password:
      input#password.form-control(type='password' name='password' value=(undefined===user ? '' : user.password) required='true')

    button.btn.btn-primary(type='submit') Login


  if errors 
   ul
    for error in errors
     li!= error.msg    


